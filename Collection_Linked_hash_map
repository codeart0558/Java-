import java.util.LinkedHashMap;

public class LinkedHashMapExample {
    public static void main(String[] args) {
        // Create a LinkedHashMap
        LinkedHashMap<Integer, String> linkedMap = new LinkedHashMap<>();

        // Add key-value pairs to the LinkedHashMap
        linkedMap.put(1, "Apple");
        linkedMap.put(2, "Banana");
        linkedMap.put(3, "Orange");

        // Display the elements in the LinkedHashMap
        System.out.println("LinkedHashMap: " + linkedMap);

        // Access a value by key
        System.out.println("Value for key 2: " + linkedMap.get(2));

        // Remove a key-value pair
        linkedMap.remove(3);
        System.out.println("After removing key 3: " + linkedMap);

        // Iterate over the LinkedHashMap
        for (Integer key : linkedMap.keySet()) {
            System.out.println("Key: " + key + ", Value: " + linkedMap.get(key));
        }
    }
}
